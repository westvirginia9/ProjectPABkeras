<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Latar belakang solid -->
    <solid android:color="#FFFBFB" />

    <!-- Sudut membulat -->
    <corners
        android:radius="24dp" /> <!-- Sudut melengkung lebih tajam -->

    <!-- Garis luar (opsional) -->
    <stroke
        android:width="1dp"
        android:color="#E0E0E0" />

    <!-- Padding internal untuk elemen di dalam kartu -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
