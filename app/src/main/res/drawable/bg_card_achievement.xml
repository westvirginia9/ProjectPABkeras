<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Latar belakang kartu -->
    <solid android:color="@color/cardBackground" />

    <!-- Sudut membulat -->
    <corners android:radius="16dp" />

    <!-- Bayangan (gunakan elevation di layout utama jika tidak terlihat) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

    <!-- Garis luar kartu (opsional) -->
    <stroke
        android:width="1dp"
        android:color="#E0E0E0" />
</shape>
