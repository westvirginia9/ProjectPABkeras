<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@drawable/bg_card">

    <!-- Kolom Kiri (Icon Tanggal dan Tanggal) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginEnd="16dp">

        <!-- Icon Kalender -->
        <ImageView
            android:id="@+id/icon_date"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_date_red" />

        <!-- Tanggal -->
        <TextView
            android:id="@+id/expense_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22 November 2024"
            android:textSize="12sp"
            android:textColor="@color/black" />
    </LinearLayout>

    <!-- Kolom Tengah (Icon Info dan Deskripsi) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_weight="1"
        android:layout_marginEnd="16dp">

        <!-- Icon Info -->
        <ImageView
            android:id="@+id/icon_info"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_info" />

        <!-- Deskripsi -->
        <TextView
            android:id="@+id/expense_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Makan"
            android:textSize="12sp"
            android:textColor="@color/black" />
    </LinearLayout>

    <!-- Kolom Kanan (Jumlah Uang dengan Warna Merah dan Minus) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/icon_money"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_money" />

        <!-- Jumlah Uang (dengan Minus) -->
        <TextView
            android:id="@+id/expense_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- Rp 20.000"
            android:textSize="12sp"
            android:textColor="@color/red" />
    </LinearLayout>
</LinearLayout>
